<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_scores"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:fontFamily="@font/righteous"
        android:text="Scores"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_creditos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_jogar"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/bt_comojogar"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:editable="false"
        android:elevation="10dp"
        android:fontFamily="@font/righteous"
        android:text="Como Jogar"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_jogar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/bt_jogar"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:fontFamily="@font/righteous"
        android:text="Jogar"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_scores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_comojogar"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/bt_creditos"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:fontFamily="@font/righteous"
        android:text="CrÃ©ditos"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_scores"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bt_comojogar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>